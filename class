class Book:
    def __init__(self, title, author, year):
        self.title = title
        self.author = author
        self.year = year
    def get_descriptive_name(self):
        information = f"{self.title}, by {self.author}, in {self.year}"
        return information
    pass

my_book = Book("To Kill a Mockingbird", "Harper Lee", 1960)
my_book.get_descriptive_name()
